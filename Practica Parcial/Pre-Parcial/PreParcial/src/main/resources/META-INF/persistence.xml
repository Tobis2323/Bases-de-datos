<!-- META-INF/persistence.xml -->
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.1">
    <!-- 1) Nombre de unidad (lo usamos al crear el EntityManagerFactory) -->
    <persistence-unit name="legosPU">
        <!-- 2) Proveedor JPA: Hibernate -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- 3) No listamos clases aquí porque las detecta por classpath;
               igual podrías agregar <class>utnfc.isi.back.domain.Country</class> etc. -->

        <properties>
            <!-- 4) No dejamos que Hibernate cree/borre tablas: el DDL lo ejecuta DbInitializer -->
            <property name="hibernate.hbm2ddl.auto" value="none"/>
            <!-- 5) Dialecto H2 -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <!-- 6) Log de SQL en consola (útil para ver queries) -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <!-- 7) Estrategia de nombrado (opcional) -->
            <property name="hibernate.physical_naming_strategy"
                      value="org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl"/>
        </properties>
    </persistence-unit>
</persistence>
